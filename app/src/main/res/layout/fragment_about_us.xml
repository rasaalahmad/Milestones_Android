<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.about_us.AboutUsFragment">

    <ImageView
        android:id="@+id/man_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/man"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/my_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/man_avatar"
        app:layout_constraintStart_toStartOf="@id/man_avatar"
        app:layout_constraintTop_toBottomOf="@id/man_avatar"
        app:layout_constraintVertical_bias="0.05"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/my_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rasaalahmad_folio3_com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/my_name_text"
        app:layout_constraintStart_toStartOf="@id/my_name_text"
        app:layout_constraintTop_toBottomOf="@id/my_name_text"
        app:layout_constraintVertical_bias="0.05"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>